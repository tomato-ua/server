{% extends 'base.html.twig' %}

{% block body %}
    <div class="centered top">
        <h1 class="centered logo">Політичний Простір</h1>

        <div id="the-basics">
            <input class="typeahead" type="text" placeholder="Введіть імя депутата">
        </div>
    </div>
    <div class="down-btn centered">
        Відео з останньої сесії
        <span class="down-arrow"></span>
    </div>
    <hr/>
    <div class="player">
        <div class="youtube">
            <iframe id="player" width="620" height="430" src="https://www.youtube.com/embed/{{ video.youtubeId }}" frameborder="0" allowfullscreen></iframe>
        </div>
        <div class="list">
            <ul>
                {% for tag in video.tags %}
                    {% if tag.timeOffset != 0 %}
                        <li data-href="https://www.youtube.com/embed/{{ video.youtubeId }}?start={{ tag.timeOffset - 57 }}&autoplay=1">
                            <span class="time">{{ tag.time|date('H:i:s') }}</span> &ndash; {{ tag.title|split('.')|join('. ')|trim|title }}
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/app.css') }}" />
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/app.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock javascripts %}
